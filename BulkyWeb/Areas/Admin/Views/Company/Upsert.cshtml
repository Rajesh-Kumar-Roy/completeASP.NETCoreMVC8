@model Company

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id !=0?"Update": "Create") Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="@Model.Id" hidden />

           <div class="row">
               <div class="col-12">
                    <div class="border p-3">
                        @* <div class="row pb-2"> *@
                        @*     <h3>Create Product</h3> *@
                        @* </div> *@
                        @* <div asp-validation-summary="All" class="text-danger"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.Name" class="form-control border-0 shadow" />
                            <label asp-for="@Model.Name" class="ms-2"></label>

                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.StreetAddress" class="form-control border-0 shadow" />
                            <label asp-for="@Model.StreetAddress" class="ms-0"></label>

                            <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.State" class="form-control border-0 shadow" />
                            <label asp-for="@Model.State" class="ms-0"></label>

                            <span asp-validation-for="@Model.State" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.City" class="form-control border-0 shadow" />
                            <label asp-for="@Model.City" class="ms-0"></label>

                            <span asp-validation-for="@Model.City" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.PostalCode" class="form-control border-0 shadow" />
                            <label asp-for="@Model.PostalCode" class="ms-0"></label>

                            <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.PhoneNumber" class="form-control border-0 shadow" />
                            <label asp-for="@Model.PhoneNumber" class="ms-0"></label>

                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                       
                        <div class="row pt-4">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary  form-control border">Back To List</a>
                            </div>
                        </div>
                    </div>
               </div>
           </div>
           
        </form>

    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
